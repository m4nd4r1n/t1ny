datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  USER
  ADMIN
  BLOCKED
}

model User {
  id             String   @id @default(cuid())
  name           String?
  gh_username    String?
  email          String?  @unique
  email_verified Boolean?
  image          String?
  role           Role     @default(USER)
  created_at     DateTime @default(now())
  updated_at     DateTime @updatedAt
  day_limit      Int      @default(20)
  total_limit    Int      @default(500)

  auth_session Session[]
  key          Key[]
  url          Url[]
}

model Session {
  id             String @id @default(cuid())
  user_id        String
  active_expires BigInt
  idle_expires   BigInt

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id])
}

model Key {
  id              String  @id @default(cuid())
  hashed_password String?
  user_id         String

  user User @relation(references: [id], fields: [user_id], onDelete: Cascade)

  @@index([user_id])
}

model Url {
  id                 String   @id @unique
  user_id            String
  target_url         String   @db.Text
  created_at         DateTime @default(now())
  updated_at         DateTime @updatedAt
  clicks             Int      @default(0)
  target_og_image    String?  @db.Text
  target_title       String?  @db.Text
  target_description String?  @db.Text
  target_favicon     String   @db.Text

  user      User        @relation(fields: [user_id], references: [id], onDelete: Cascade)
  analytics Analytics[]

  @@index([user_id])
}

model Analytics {
  id         String   @id @default(cuid())
  url_id     String
  ip_address String?
  user_agent String?  @db.Text
  created_at DateTime @default(now())
  country    String?

  url Url @relation(fields: [url_id], references: [id], onDelete: Cascade)

  @@index([url_id])
}
